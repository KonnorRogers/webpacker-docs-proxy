<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }}">
    {% render "github_icon", github_url: page.github_url %}
    {% for doc in site.collections.docs.docs %}
      {{ doc.url }}
    {% endfor %}

    <main data-controller="header-link document-link">
      {{ content }}
    </main>

    {% render "nav_button" %}

    {% render "footer" %}
  </body>
</html>
