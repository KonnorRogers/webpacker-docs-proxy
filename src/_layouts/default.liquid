<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }}">
    {% render "github_icon", github_url: page.github_url %}
    <nav class="flex flex-col">
      {% render "nav_items", styles: "text-gray-700", collection: site.collections.docs %}
    </nav>

    {{ page.collection.name }}
    {% for doc in site.docs %}
      {{ doc }}
    {% endfor %}
    <main data-controller="header-link document-link">
      {{ content }}
    </main>

    {% render "nav_button" %}

    {% render "footer" %}
  </body>
</html>
