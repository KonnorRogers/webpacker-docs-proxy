{
  "plugins": [
    ["@snowpack/plugin-babel"],
    [
      "@snowpack/plugin-build-script",
      {
        "cmd": "postcss --config postcss.config.js",
        "input": [".css"],
        "output": [".css"]
      }
    ]
  ],
  "installOptions": { "NODE_ENV": true },
  "devOptions": {
    "clean": true,
    "open": "none",
    "port": 4002,
    "out": "output/_frontend_"
  },
  "buildOptions": {
    "baseUrl": "/",
    "metaDir": "",
    "bundle": false
  },
  "mount": { "frontend": "/" }
}
